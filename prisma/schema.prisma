datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  phone         String?   @unique
  walletAddress String?   @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model OtpCode {
  id         String   @id @default(cuid())
  code       String
  identifier String
  type       String   // 'email' or 'phone'
  expiresAt  DateTime
  createdAt  DateTime @default(now())
}
